<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
    <Button name="CompactUnitFrameBuffButtonTemplate" frameLevel="3" virtual="true">
        <Size x="14" y="14" />
        <Backdrop bgFile="Interface/Tooltips/UI-Tooltip-Background">
            <Color r="0" g="0" b="0" a="1" />
        </Backdrop>
        <Layers>
            <Layer level="OVERLAY">
                <Texture name="$parentTexture">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeTo="$parent">
                            <Offset x="0" y="-1" />
                        </Anchor>
                        <Anchor point="BOTTOMRIGHT" relativeTo="$parent">
                            <Offset x="-1" y="0" />
                        </Anchor>
                    </Anchors>
                    <TexCoords left="0.08" right="0.92" top="0.08" bottom="0.92" />
                </Texture>
            </Layer>
        </Layers>
        <Scripts>
            <OnEnter>
                GameTooltip_SetDefaultAnchor(GameTooltip, UIParent)
                GameTooltip:SetUnitBuff(this:GetParent().unit, this.index)
                GameTooltip:Show()
            </OnEnter>
            <OnLeave>
                GameTooltip:Hide()
            </OnLeave>
        </Scripts>
    </Button>
    <Frame name="CompactUnitFrameTemplate" virtual="true">
        <Size x="82" y="50"/>
        <Frames>
            <Button name="$parentHitbox">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent" />
                    <Anchor point="BOTTOMRIGHT" relativeTo="$parent" />
                </Anchors>
                <Scripts>
                    <OnMouseDown>
                        if arg1 == 'LeftButton' then
                            TargetUnit(this:GetParent().unit)
                        elseif arg1 == 'RightButton' then
                            local id = this:GetParent():GetID()
                            if id > 0 then
                                ToggleDropDownMenu(1, nil, getglobal('PartyMemberFrame' .. id .. 'DropDown'), this:GetName(), 100, 25)
                            end
                        end
                    </OnMouseDown>
                    <OnEnter>
                        GameTooltip_SetDefaultAnchor(GameTooltip, UIParent)
                        GameTooltip:SetUnit(this:GetParent().unit)
                        GameTooltip:Show()
                    </OnEnter>
                    <OnLeave>
                        GameTooltip:Hide()
                    </OnLeave>
                </Scripts>
            </Button>
            <StatusBar name="$parentHealthBar">
                <Size x="82" y="50" />
                <BarTexture file="Interface\AddOns\CRF\assets\UnitFrame-HealthFill" />
                <BarColor r="0" g="1" b="0" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent" />
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString name="$parentText" font="Fonts\FRIZQT__.TTF" hidden="true">
                            <Size x="70" y="14" />
                            <FontHeight val="14" />
                            <Color r="0.5" g="0.5" b="0.5" a="1" />
                            <Shadow>
                                <Offset x="1" y="-1" />
                                <Color r="0" g="0" b="0" />
                            </Shadow>
                            <Anchors>
                                <Anchor point="CENTER" relativeTo="$parent">
                                    <Offset x="0" y="-10" />
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Backdrop bgFile="Interface/Tooltips/UI-Tooltip-Background">
                    <Color r="0.1" g="0.1" b="0.1" a="0.8" />
                </Backdrop>
                <Scripts>
                    <OnLoad>
                        this:SetFrameLevel(0)
                    </OnLoad>
                </Scripts>
                <Frames>
                    <StatusBar name="$parentIncomingHealBar" hidden="true">
                        <BarTexture file="Interface\AddOns\CRF\assets\UnitFrame-HealthFill" />
                        <BarColor r="0" g="0.6" b="0" />
                        <Scripts>
                            <OnLoad>
                                this:SetFrameLevel(0)
                            </OnLoad>
                        </Scripts>
                    </StatusBar>
                </Frames>
            </StatusBar>
            <StatusBar name="$parentPowerBar" hidden="true">
                <Size x="82" y="10" />
                <BarTexture file="Interface\AddOns\CRF\assets\UnitFrame-HealthFill" />
                <Anchors>
                    <Anchor point="BOTTOMLEFT" relativeTo="$parent" />
                </Anchors>
                <Backdrop bgFile="Interface/Tooltips/UI-Tooltip-Background">
                    <Color r="0.2" g="0.2" b="0.2" a="0.8" />
                </Backdrop>
                <Scripts>
                    <OnLoad>
                        this:SetFrameLevel(0)
                    </OnLoad>
                </Scripts>
            </StatusBar>
            <Button name="$parentBuffButton1" inherits="CompactUnitFrameBuffButtonTemplate">
                <Anchors>
                    <Anchor point="BOTTOMLEFT" relativeTo="$parentHealthBar">
                        <Offset x="2" y="1" />
                    </Anchor>
                </Anchors>
            </Button>
            <Button name="$parentBuffButton2" inherits="CompactUnitFrameBuffButtonTemplate">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentBuffButton1">
                        <Offset x="14" y="0" />
                    </Anchor>
                </Anchors>
            </Button>
            <Button name="$parentBuffButton3" inherits="CompactUnitFrameBuffButtonTemplate">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentBuffButton2">
                        <Offset x="14" y="0" />
                    </Anchor>
                </Anchors>
            </Button>
            <Button name="$parentBuffButton4" inherits="CompactUnitFrameBuffButtonTemplate">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentBuffButton3">
                        <Offset x="14" y="0" />
                    </Anchor>
                </Anchors>
            </Button>
        </Frames>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentNameText" font="Fonts\FRIZQT__.TTF" justifyH="LEFT">
                    <Size x="70" y="12" />
                    <FontHeight val="12" />
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeTo="$parent">
                            <Offset x="22" y="-4" />
                        </Anchor>
                    </Anchors>
                </FontString>
                <Texture name="$parentDebuffIndicator">
                    <Size x="16" y="16" />
                    <Anchors>
                        <Anchor point="BOTTOMRIGHT" relativeTo="$parent">
                            <Offset x="-6" y="4" />
                        </Anchor>
                    </Anchors>
                </Texture>
                <Texture name="$parentCombatIndicator" file="Interface\AddOns\CRF\assets\UnitFrame-CombatIndicator">
                    <Size x="16" y="16" />
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeTo="$parent">
                            <Offset x="6" y="-2" />
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad>
                this.unit = nil

                this.interval = 1
                this.elapsed = 0

                this:RegisterEvent('UNIT_HEALTH')
                this:RegisterEvent('UNIT_MANA')
                this:RegisterEvent('UNIT_ENERGY')
                this:RegisterEvent('UNIT_RAGE')
                this:RegisterEvent('UNIT_AURA')
                this:RegisterEvent('UNIT_DISPLAYPOWER')
            </OnLoad>
            <OnEvent>
                local unit = arg1
                if unit and unit == this.unit then
                    if event == 'UNIT_AURA' then
                        CRF_UpdateMemberFrameBuffs(this)
                        CRF_UpdateMemberFrameDebuffIndicator(this)
                    else
                        CRF_UpdateMemberFrame(this)
                    end
                end
            </OnEvent>
            <OnUpdate>
                this.elapsed = this.elapsed + arg1
                if this.elapsed >= this.interval then
		            this.elapsed = 0

                    if this.unit then
                        local indicator = getglobal(this:GetName() .. 'CombatIndicator')
                        if UnitAffectingCombat(this.unit) then
                            indicator:Show()
                            getglobal(this:GetName() .. 'NameText'):SetPoint('TOPLEFT', this, 22, -4)
                            getglobal(this:GetName() .. 'NameText'):SetWidth(this:GetWidth() - 32)
                        else
                            indicator:Hide()
                            getglobal(this:GetName() .. 'NameText'):SetPoint('TOPLEFT', this, 6, -4)
                            getglobal(this:GetName() .. 'NameText'):SetWidth(this:GetWidth() - 12)
                        end

                        if this.unit ~= 'player' and UnitIsConnected(this.unit) then
                            if not CheckInteractDistance(this.unit, 4) then
                                getglobal(this:GetName() .. 'HealthBar'):SetAlpha(0.5)
                                getglobal(this:GetName() .. 'PowerBar'):SetAlpha(0.5)
                            else
                                getglobal(this:GetName() .. 'HealthBar'):SetAlpha(1)
                                getglobal(this:GetName() .. 'PowerBar'):SetAlpha(1)
                            end
                        end
                    end
                end
            </OnUpdate>
        </Scripts>
    </Frame>
</Ui>